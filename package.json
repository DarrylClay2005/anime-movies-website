{
  "name": "animeverse-desktop",
  "version": "1.0.0",
  "description": "AnimeVerse - Desktop Anime Discovery Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --linux --win --mac",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "anime",
    "desktop",
    "electron",
    "entertainment",
    "streaming"
  ],
  "author": {
    "name": "Darryl Clay",
    "email": "darrylclay2005@example.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-updater": "^6.1.4"
  },
  "build": {
    "appId": "com.darrylclay.animeverse",
    "productName": "AnimeVerse",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!.git",
      "!.github",
      "!README.md",
      "!ENHANCEMENTS.md"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "AudioVideo;Entertainment",
      "description": "Discover and explore anime with AnimeVerse desktop application",
      "desktop": {
        "Name": "AnimeVerse",
        "Comment": "Anime Discovery Platform",
        "Keywords": "anime;entertainment;streaming;movies;series",
        "StartupWMClass": "AnimeVerse"
      },
      "synopsis": "Desktop application for discovering anime movies and series with streaming platform integration"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DarrylClay2005/anime-movies-website.git"
  },
  "homepage": "https://darrylclay2005.github.io/anime-movies-website/"
}
